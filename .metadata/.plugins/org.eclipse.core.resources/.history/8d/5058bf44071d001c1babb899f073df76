
public class PerfectNumber {

	public static void main(String[] args) {
int n=29;
if(isItPerfect(n)){
System.out.print(n);
}

else
System.out.print(n);

}
static boolean isItPerfect(int input) {
int i=1;
int sum=0;
while(i <= input/2) {
if(input%i == 0) {
sum=sum+i;
}
i++;
}
return input == sum;
}
	}
